FROM node:18-alpine AS build

WORKDIR /app

# Permitir configurar a URL da API em tempo de build
ARG REACT_APP_API_URL=https://tracklink.ideiasobria.online
ENV REACT_APP_API_URL=${REACT_APP_API_URL}

# Instalar dependências do frontend
COPY frontend/package*.json ./
RUN npm install

COPY frontend/ .
RUN npm run build

# Etapa final: servir os arquivos estáticos com Nginx
FROM nginx:1.25-alpine

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]


